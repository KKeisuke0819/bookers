<% if flash[:destroy] %>
  <p><%= flash[:destroy] %></p>
<% end %>
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book),
        method: :delete, data: { confirm: '削除しますか?' } %></td>
    </tr>
  <% end %>
</table>

<h2>New book</h2>
<%= render 'form' %>